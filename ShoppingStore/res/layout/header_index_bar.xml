<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:background="@color/bgcolor_header"
	    android:padding="10dp" >
	
	    <ImageView
	        android:id="@+id/imageView_Left"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:src="@drawable/homemenu2x" />
	
	    <ImageView
	        android:id="@+id/textView_Title"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:src="@drawable/hometitle2x"
	        android:layout_weight="1" />
	
	    <ImageView
	        android:id="@+id/imageView_Right"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:src="@drawable/commonshopcart2x" />
	
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/include_footer_edit"
	        android:background="@color/header_top_line_color" />
    </LinearLayout>

</LinearLayout> 