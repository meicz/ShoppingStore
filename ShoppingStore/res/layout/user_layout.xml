<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        layout="@layout/header_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include1" >
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include1"
        android:background="@color/user_bgcolor"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:background="#FFF" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" 
                android:src="@drawable/tabbrand2x" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:text="" />

            <TextView
                android:id="@+id/textView_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignLeft="@+id/textView_name"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true"
                android:textColor="#000"
                android:text="普卡" />

        </RelativeLayout>
        
        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/include_footer_edit"
	        android:background="@color/user_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="#FFF"
            android:gravity="center"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/textView_quanbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" 
                android:gravity="center"
                android:textColor="@color/userf_text_font_bgcolor"
                android:text="优惠券：" />

            <TextView
                android:id="@+id/textView_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView_quanbar"
                android:layout_alignBottom="@+id/textView_quanbar"
                android:layout_toRightOf="@+id/textView_quanbar"
                android:textColor="@color/login_but_bgcolor"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/textView_ky"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/textView_quan"
                android:layout_alignBottom="@+id/textView_quan"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView_quan"
                android:textColor="@color/userf_text_font_bgcolor"
                android:gravity="center"
                android:text="张可使用" />

            <TextView
                android:id="@+id/textView_olgold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="40dp"
                android:text="0.00"
                android:textColor="@color/login_but_bgcolor" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/textView_olgold"
                android:text="积分："
                android:textColor="@color/userf_text_font_bgcolor" />
 
        </RelativeLayout>

        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/include_footer_edit"
	        android:background="@color/user_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" 
            android:background="@color/user_bgcolor" >
            
			<TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
			
            <ImageView
                android:id="@+id/imageView_wzf"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"  
                android:src="@drawable/dfk" /> 
			
			<TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
			
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"  
                android:src="@drawable/wl" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" 
            android:background="@drawable/text_margin_line"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/textView_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="全部订单" />

                <ImageView
                    android:id="@+id/imageView_order"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
            <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/include_footer_edit"
		        android:background="@color/user_line_color" />
            
            <RelativeLayout
                android:id="@+id/imageView_address"
                android:layout_width="match_parent"
               	android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/imageView_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="地址信息" />

                <ImageView
                    android:id="@+id/imageView_address2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
            <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/include_footer_edit"
		        android:background="@color/user_line_color" />
            
            <RelativeLayout
                android:layout_width="match_parent"
               	android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="积分管理" />

                <ImageView
                    android:id="@+id/textView91"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
            <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/include_footer_edit"
		        android:background="@color/user_line_color" />

            <RelativeLayout
                android:id="@+id/textView_yhq"
                android:layout_width="match_parent"
               	android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView_yhq1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="领取优惠券" />

                <ImageView
                    android:id="@+id/textView_yhq2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="10dp"  
            android:background="@drawable/text_margin_line"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/imageView_userinfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/imageView_userinfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="个人信息" />

                <ImageView
                    android:id="@+id/imageView_userinfo2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
            <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/include_footer_edit"
		        android:background="@color/user_line_color" />
            
            <RelativeLayout
                android:id="@+id/textView_password"
                android:layout_width="match_parent"
               	android:layout_height="@dimen/header_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/textView_password1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/userf_text_font_bgcolor"
                    android:text="修改密码" />

                <ImageView
                    android:id="@+id/textView_password2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/merchandiseitemsizearrowright2x" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_backhome"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#000"
                android:text="退出登录"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </LinearLayout>
        
    </LinearLayout>

    </ScrollView>
  
</RelativeLayout>