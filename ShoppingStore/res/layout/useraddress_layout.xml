<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/bgcolor_header" >

    <include
        android:id="@+id/address_header_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        layout="@layout/header_bar" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:paddingRight="30dp"  
	    android:paddingTop="40dp"
	    android:orientation="vertical" >
	    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content" 
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="收件人" />
		
		        <EditText
		            android:id="@+id/editText_Shrname"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor" 
		            android:singleLine="true"  
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size"
		            android:layout_weight="1" 
		            android:ems="10" > 
		        </EditText>
	      </LinearLayout>
	      
	    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content" 
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="手机号码" />
		
		        <EditText
		            android:id="@+id/editText_LinkPhone"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor" 
		            android:singleLine="true"  
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size"
		            android:layout_weight="1" 
		            android:ems="10" > 
		        </EditText>
		  </LinearLayout>
		  
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:paddingRight="10dp"
		            android:text="所在地区"
		            android:textColor="@color/commodity_font_color" />
		
		        <TextView
		            android:id="@+id/editText_area"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor"  
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size" 
		            android:gravity="left|center"
		            android:layout_weight="1" 
		            android:ems="10" > 
		            <requestFocus />
		        </TextView>
		    </LinearLayout>
		    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content" 
		            android:layout_weight="4"
		            android:gravity="top|right"
		            android:paddingRight="10dp"
		            android:text="详细地址"
		            android:textColor="@color/commodity_font_color" />
		
		        <EditText
		            android:id="@+id/editText_address"
		            android:layout_width="215dp"
		            android:layout_height="150dp"
		            android:background="@color/edit_bgcolor"  
		            android:textColor="@color/edit_font_color"
		            android:layout_weight="1" 
		            android:gravity="left|top"
		            android:ems="10" > 
		        </EditText>
		    </LinearLayout>
		    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="邮政编码" />
		
		        <EditText
		            android:id="@+id/editText_postCode"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor"
		            android:singleLine="true"
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size"
		            android:layout_weight="1" 
		            android:ems="10" > 
		        </EditText>
		    </LinearLayout>
		    
	     <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:text="" />
		
		        <Button
		            android:id="@+id/button_addAddress"
		            android:layout_width="107dp"
		             android:layout_marginRight="107dp"
		            android:layout_height="@dimen/edit_height"
		            android:layout_weight="1"
		            android:background="@color/login_but_bgcolor"
		            android:text="添加新地址"
		            android:textColor="@color/edit_bgcolor"
		            android:textSize="15sp" />
		    </LinearLayout>
    </LinearLayout>
 
</LinearLayout>