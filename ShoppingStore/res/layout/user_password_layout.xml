<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/bgcolor_header" >

    <include
        android:id="@+id/header_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        layout="@layout/header_bar" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" 
        android:gravity="center"
        android:text="" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:paddingRight="30dp"  
	    android:paddingTop="40dp"
	    android:orientation="vertical" > 
	    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content" 
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="当前密码" />
		
		        <TextView
		            android:id="@+id/editText_area11"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor"  
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size" 
		            android:gravity="left|center"
		            android:layout_weight="1" 
		            android:ems="10" > 
		            <requestFocus />
		        </TextView>
	      </LinearLayout>
	      
	    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content" 
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="新密码" />
		
		        <EditText
		            android:id="@+id/editText_LinkPhone"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor" 
		            android:singleLine="true"  
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size"
		            android:layout_weight="1" 
		            android:ems="10" > 
		        </EditText>
		  </LinearLayout>
		     
		    
	    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:textColor="@color/commodity_font_color" 
		            android:text="确认新密码" />
		
		        <EditText
		            android:id="@+id/editText_postCode"
		            android:layout_width="215dp"
		            android:layout_height="@dimen/edit_height"
		            android:background="@color/edit_bgcolor"
		            android:singleLine="true"
		            android:textColor="@color/commodity_font_color"
		            android:textSize="@dimen/edit_font_size"
		            android:layout_weight="1" 
		            android:ems="10" > 
		        </EditText>
		    </LinearLayout>
			    
	     <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="10dp" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="140dp"
		            android:layout_height="wrap_content"
		            android:paddingRight="10dp"
		            android:layout_weight="4"
		            android:gravity="right"
		            android:text="" />
		
		        <Button
		            android:id="@+id/button_addAddress"
		            android:layout_width="107dp"
		             android:layout_marginRight="107dp"
		            android:layout_height="@dimen/edit_height"
		            android:layout_weight="1"
		            android:background="@color/login_but_bgcolor"
		            android:text="提交"
		            android:textColor="@color/edit_bgcolor"
		            android:textSize="15sp" />
		    </LinearLayout> 

    </LinearLayout>
 
</LinearLayout>