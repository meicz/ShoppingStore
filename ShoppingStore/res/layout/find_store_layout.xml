<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor_header" >

    <com.shoppingstore.app.formcommon.utils.RadioButtonLayout
            android:id="@+id/button_new"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height" 
            android:background="@drawable/find_item_select_bg"
            android:padding="10dp" > 
            
	    <TextView
	        android:id="@+id/textView_xin"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/header_height" 
	        android:gravity="center|left"
	        android:textColor="@drawable/find_text_select_color"
	        android:text="按最新" />
	    
    </com.shoppingstore.app.formcommon.utils.RadioButtonLayout>

    <com.shoppingstore.app.formcommon.utils.RadioButtonLayout
            android:id="@+id/button_pric"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height" 
            android:background="@drawable/find_item_select_bg"
            android:padding="10dp" > 
            
	    <TextView
	        android:id="@+id/textView_ddg"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/header_height" 
	        android:gravity="center|left"
	        android:textColor="@drawable/find_text_select_color"
	        android:text="按价格从低到高" />
	    
    </com.shoppingstore.app.formcommon.utils.RadioButtonLayout>
    
    <com.shoppingstore.app.formcommon.utils.RadioButtonLayout
            android:id="@+id/button_pricedesc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height" 
            android:background="@drawable/find_item_select_bg"
            android:padding="10dp" > 
            
	    <TextView
	        android:id="@+id/textView_gdd"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/header_height" 
	        android:gravity="center|left"
	        android:textColor="@drawable/find_text_select_color"
	        android:text="按价格从高到低" />
    </com.shoppingstore.app.formcommon.utils.RadioButtonLayout>
    
    <com.shoppingstore.app.formcommon.utils.RadioButtonLayout
            android:id="@+id/button_rx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height" 
            android:background="@drawable/find_item_select_bg"
            android:padding="10dp" > 
            
	    <TextView
	        android:id="@+id/textView_rx"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/header_height" 
	        android:gravity="center|left"
	        android:textColor="@drawable/find_text_select_color"
	        android:text="按热销" />
    </com.shoppingstore.app.formcommon.utils.RadioButtonLayout>
    
    <com.shoppingstore.app.formcommon.utils.RadioButtonLayout
            android:id="@+id/button_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height" 
            android:background="@drawable/find_item_select_bg"
            android:padding="10dp" > 
            
	    <TextView
	        android:id="@+id/textView_scpm"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/header_height" 
	        android:gravity="center|left"
	        android:textColor="@drawable/find_text_select_color"
	        android:text="按收藏排名" />
	    
    </com.shoppingstore.app.formcommon.utils.RadioButtonLayout>
</LinearLayout>
