<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/user_bgcolor" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号："
            android:textSize="12sp" 
            android:textColor="@color/userf_text_font_bgcolor" />

        <TextView
            android:id="@+id/textView_orderitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView1"
            android:text=""
            android:textSize="12sp" 
            android:textColor="@color/userf_text_font_bgcolor" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="12sp" 
            android:textColor="@color/login_but_bgcolor" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_margin_line" 
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imageView_imageUrl1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/commoditybg" 
            android:scaleType="centerCrop"
            android:layout_margin="5dp" />
        
        <ImageView
            android:id="@+id/imageView_imageUrl2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/commoditybg" 
            android:scaleType="centerCrop"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/textView_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="111"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_quantity"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="已提交,等待付款"
                android:textColor="#000"
                android:textSize="12sp" />

        </RelativeLayout>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单金额："
            android:textSize="12sp"
            android:textColor="@color/userf_text_font_bgcolor" />

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView1"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/login_but_bgcolor" />

        <RelativeLayout
            android:id="@+id/layout_look"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
            
            <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:paddingRight="10dp"
	            android:textColor="@color/order_font_bgcolor"
	            android:text="查看" />
	
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5dp"
	            android:layout_toLeftOf="@+id/textView4"
	            android:src="@drawable/search" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
