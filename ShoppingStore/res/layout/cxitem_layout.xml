<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:background="#FFF" >

    <ImageView
        android:id="@+id/imageView_imageUrl"
        android:layout_width="500dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:scaleType="centerCrop"
        android:src="@drawable/bannerbg" />

    <LinearLayout
        android:id="@+id/layout_bar"
        android:layout_width="170dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/imageView_imageUrl"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/cxbg"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView_titlecn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_titleen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=" "
            android:textColor="#FFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_mem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFF"
            android:textSize="20sp" />
    </LinearLayout>
    
	 

</RelativeLayout>
