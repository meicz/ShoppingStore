<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
 <!-- 没有焦点时的背景图片 -->    
 
 <item android:state_enabled="true" />     
  	<item android:state_window_focused="false" android:drawable="@drawable/homemen" />     
	<!-- 非触摸模式下获得焦点并单击时的背景图片 -->    
 	<item android:state_focused="true" android:state_pressed="true" android:drawable= "@drawable/homemenselected2x" />   
	<!-- 触摸模式下单击时的背景图片-->    
	<item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/homemenselected2x" /> 
	<!-- 非触摸模式下获得焦点并单击时的背景图片 -->    
 	<item android:state_focused="true" android:state_pressed="false" android:drawable= "@drawable/homemenselected2x" />       
	<!--选中时的图片背景-->    
  	<item android:state_selected="true" android:drawable="@drawable/homemenselected2x" />     
	<!--获得焦点时的图片背景-->    
  	<item android:state_focused="true" android:drawable="@drawable/homemenselected2x" />
  	<!-- 默认时的背景，要方在下面才有效果-->    
  	<item android:drawable="@drawable/homemen" /> 
</selector> 